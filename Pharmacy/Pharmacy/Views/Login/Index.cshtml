@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/Assets/css/styleL_R.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
    <section class="container forms">
        <div class="form login active">
            <div class="form-content">
                <header>Đăng nhập</header>
                <form action="#">
                    <div class="field input-field">
                        <input type="email" placeholder="Email" class="input">
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="Mật khẩu" class="password">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>

                    <div class="form-link">
                        <a href="#" data-target="forgot-password" class="link forgot-pass">Quên mật khẩu?</a>
                    </div>

                    <div class="field button-field">
                        <button>Đăng nhập</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>Bạn chưa có tài khoản? <a href="#" data-target="signup" class="link signup-link">Đăng ký</a></span>
                </div>
            </div>

            <div class="line"></div>


            <div class="media-options">
                <a href="#" class="field google">
                    <img src="~/Assets/img/google.png" alt="" class="google-img">
                    <span>Tiếp tục với Google</span>
                </a>
            </div>

        </div>

        <!-- Signup Form -->

        <div class="form signup">
            <div class="form-content">
                <header>Đăng ký</header>
                <form action="#">
                    <div class="field input-field">
                        <input type="email" placeholder="Email" class="input">
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="Mật khẩu" class="password">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="Nhập lại mật khẩu" class="password">
                    </div>

                    <div class="field input-field">
                        <input type="text" placeholder="Họ và tên" class="input">
                        <input type="text" placeholder="Số điện thoại" class="input">
                    </div>
                    <div class="field input-field">
                        <input type="text" placeholder="Địa chỉ" class="input">
                        <input type="date" class="input">
                    </div>

                    <div class="field input-field">
                        <input type="text" placeholder="Giới tính" class="input">
                        <input type="text" placeholder="Dị ứng (nếu có)" class="input">
                    </div>


                    <div class="field button-field">
                        <button>Đăng ký</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>Bạn đã có tài khoản? <a href="#" data-target="login" class="link login-link">Đăng nhập</a></span>
                </div>
            </div>

            <div class="line"></div>

            <div class="media-options">
                <a href="#" class="field google">
                    <img src="~/Assets/img/google.png" alt="" class="google-img">
                    <span>Tiếp tục với Google</span>
                </a>
            </div>

        </div>

        <!--Forgot password-->
        <div class="form forgot-password">
            <div class="form-content">
                <header>Quên mật khẩu</header>
                <form action="#">
                    <div class="field input-field">
                        <input type="email" placeholder="Email" class="input">
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="Mật khẩu mới" class="password">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>

                    <div class="field input-field">
                        <input type="password" placeholder="Nhập lại mật khẩu" class="password">
                        <i class='bx bx-hide eye-icon'></i>
                    </div>

                    <div class="field button-field">
                        <button>Đổi mật khẩu</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>Quay lại? <a href="#" data-target="login" class="link signin-link">Đăng nhập</a></span>
                </div>
            </div>
        </div>

    </section>

    <!-- JavaScript -->
    <script src="~/Assets/js/script.js"></script>
</body>
</html>

