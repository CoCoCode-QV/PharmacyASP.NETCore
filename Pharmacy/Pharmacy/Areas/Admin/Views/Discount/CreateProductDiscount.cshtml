@model ProductDiscount

@{
    ViewData["Title"] = "Thêm mới mã giảm gía cho sản phẩm";
    Layout = "~/Areas/Admin/Views/_Layout_Admin.cshtml";
}

<h2>Thêm mới mã giảm giá cho sản phẩm</h2>

<hr />
<div class="edit-admin">
    @using (Html.BeginForm("CreateProductDiscount", "Discount", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.DiscountStartDate, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.DiscountStartDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiscountStartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.DiscountEndDate, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.DiscountEndDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiscountEndDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Sản phẩm</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.CostId, ViewBag.ProductCost as SelectList, "-- Chọn sản phẩm --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CostId, "", new { @class = "text-danger" })
                </div>  
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Mã giảm giá</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.DiscountId, ViewBag.DiscountName as SelectList, "-- Chọn Mã giảm giá --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DiscountId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <p class="text-danger ">
                        @TempData["error"]
                    </p>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-lg-2">
                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>

<div class="back-pro">
    <i class="fa fa-reply"></i>
    @Html.ActionLink("Quay lại", "ProductDiscount")
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

