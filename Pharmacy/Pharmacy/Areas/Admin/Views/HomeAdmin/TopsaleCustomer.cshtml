@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IEnumerable<Pharmacy.ViewsModels.TopSaleCustomerViewModels>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_Layout_Admin.cshtml";
}



<div class="main-container">
    <h2>Top 10 sản phẩm đã mua</h2>
   
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <span>Tên sản phẩm</span>
            </th>
            <th>
                <span>Hình ảnh</span>
            </th>
            <th>
                <span>Số lượng đã mua</span>
            </th>
            <th>
                <span>Tổng tiền đã sữ dụng</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img src="@item.ProductImage" alt="Product Image" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalQuantityPurchased)
                </td>
           
                <td>
                    @string.Format("{0:N0} VNĐ", item.TotalAmountSpent)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <i class="fa fa-reply"></i>
    @Html.ActionLink("Quay lại", "statisticalHistoryCustomer")
</div>

<div class="pagination-admin">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("TopSaleCustomer", new { page }))
</div>
